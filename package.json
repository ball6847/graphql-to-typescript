{
  "name": "graphql-to-typescript",
  "version": "0.1.2",
  "description": "Takes a glob of GraphQL files and writes a typescript module that exports the graphql type definitions as a string array and converts the graphql types to interfaces.",
  "main": "dist/index.js",
  "typings": "dist/index",
  "author": "3VL INC.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:3VLINC/graphql-to-typescript.git"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.12.2",
    "graphql": "^0.9.1",
    "graphql-code-generator": "^0.5.1",
    "graphql-subscriptions": "^0.3.1",
    "graphql-tools": "^0.10.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/chalk": "^0.4.31",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "chai": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.1",
    "ts-node": "^4.1.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.2",
    "watch": "^1.0.2"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf dist/*",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build",
    "start": "npm run build:watch",
    "test": "mocha --require ts-node/register src/**/*.test.ts",
    "test:watch": "npm run test -- --watch --watch-extensions test.ts",
    "test:coverage": "nyc npm run test",
    "lint": "tslint src/**/*.ts"
  },
  "bin": {
    "graphql-to-typescript": "./dist/index.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/tests/**"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
